from django.db import models
from home.models import Restaurant  # assuming each order is linked to a restaurant
from django.contrib.auth.models import User  # assuming orders are linked to users

class Order(models.Model):
    restaurant = models.ForeignKey(Restaurant, on_delete=models.CASCADE, related_name='orders')
    customer = models.ForeignKey(User, on_delete=models.SET_NULL, null=True, blank=True, related_name='orders')
    total_amount = models.DecimalField(max_digits=10, decimal_places=2, default=0.00)
    status = models.CharField(max_length=50, default='Pending')
    created_at = models.DateTimeField(auto_now_add=True)
    updated_at = models.DateTimeField(auto_now=True)

    # âœ… New field for special customer instructions
    customer_notes = models.TextField(blank=True, null=True)

    def __str__(self):
        return f"Order #{self.id} - {self.restaurant.name} - {self.status}"

Next Steps (Run These Commands):
python manage.py makemigrations orders
python manage.py migrate
