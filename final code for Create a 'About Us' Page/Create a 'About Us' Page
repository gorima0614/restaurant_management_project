Step 1: Create an "About" Model
# models.py
class AboutUs(models.Model):
    title = models.CharField(max_length=100, default='About Us')
    description = models.TextField()
    image = models.ImageField(upload_to='about_us/', blank=True, null=True)

    def __str__(self):
        return self.title

python manage.py makemigrations
python manage.py migrate

# admin.py
from .models import AboutUs
admin.site.register(AboutUs)

Step 2: Create the View
# views.py
from django.shortcuts import render
from .models import AboutUs

def about_us(request):
    about = AboutUs.objects.first()
    return render(request, 'about_us.html', {'about': about})

Step 3: Add Template
{% extends "base.html" %}
{% block title %}About Us{% endblock %}

{% block content %}
<div class="about-section" style="padding: 40px; text-align: center;">
    {% if about %}
        <h2>{{ about.title }}</h2>
        <p>{{ about.description }}</p>

        {% if about.image %}
            <img src="{{ about.image.url }}" alt="About us image" style="max-width: 400px; margin-top: 20px;">
        {% endif %}
    {% else %}
        <p>About us information will be available soon.</p>
    {% endif %}
</div>
{% endblock %}

Step 4: Add URL Pattern
# urls.py
from django.urls import path
from . import views

urlpatterns = [
    path('about/', views.about_us, name='about_us'),
]


Step 5: Link from Homepage Navigation
<nav>
    <ul style="list-style: none; display: flex; gap: 20px;">
        <li><a href="{% url 'home' %}">Home</a></li>
        <li><a href="{% url 'about_us' %}">About Us</a></li>
        <!-- other links -->
    </ul>
</nav>
